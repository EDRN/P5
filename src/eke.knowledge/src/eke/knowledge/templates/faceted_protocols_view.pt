<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:content-core fill-slot="content-core">
<div class="listingBar" style="display: none"></div>
<metal:block define-macro="content-core"
                    tal:define="templateId template/getId">

    <metal:listingmacro define-macro="listing">
    <tal:foldercontents define="contentFilter contentFilter|request/contentFilter|nothing;
	                      contentFilter python:contentFilter and dict(contentFilter) or {};
                        limit_display limit_display|request/limit_display|nothing;
                        limit_display python:limit_display and int(limit_display) or None;
                        more_url more_url|request/more_url|string:folder_contents;
                        is_a_topic python:context.portal_type=='Topic';
                        folderContents folderContents|nothing; folderContents python:folderContents or is_a_topic and context.queryCatalog(batch=True, **contentFilter) or context.getFolderContents(contentFilter, batch=True, b_size=limit_display or 100);
                        site_properties context/portal_properties/site_properties;
                        use_view_action site_properties/typesUseViewActionInListings|python:();
                        Batch python:modules['Products.CMFPlone'].Batch;
                        b_start python:request.get('b_start', 0);
                        batch python:isinstance(folderContents, Batch) and folderContents or Batch(folderContents, limit_display or 100, int(b_start), orphan=1);
                        isAnon context/@@plone_portal_state/anonymous;
                        normalizeString nocall: context/plone_utils/normalizeString;
                        toLocalizedTime nocall: context/@@plone/toLocalizedTime;
                        navigation_root_url context/@@plone_portal_state/navigation_root_url;
                        pas_member context/@@pas_member;">
    <tal:listing condition="batch">
        <table class='listing protocolsTable'>
          <thead>
            <tr>
              <th i18n:translate='ekeProtocolsTableHeadingTitle'>Title</th>
              <th i18n:translate='ekeProtocolsTableHeadingAbstract'>Abstract</th>
              <th i18n:translate='ekeProtocolsTableHeadingInvestigator'>Investigator</th>
            </tr>
          </thead>
          <tbody metal:define-slot='entries'>
            <tal:entry tal:repeat='item batch' metal:define-macro='entries'>
              <tal:block tal:define='
                item_url item/getURL|item/absolute_url;
                item_title_or_id item/pretty_title_or_id;
                item_wf_state item/review_state|string:"private";
                item_wf_state_class python:"state-" + normalizeString(item_wf_state);
                protocol_description item/Description|nothing;
                piName item/piName|nothing;
                piURL item/piURL|nothing;
                odd_row repeat/item/odd;
                row_class python:"odd" if odd_row else "even";
              '>
              <metal:block define-slot='entry'>
                <tr metal:define-macro='listeitem' class='odd' tal:attributes='class row_class'>
                  <td style='padding: 0 1em 1em 0;'>
                    <a href='#' class='public' tal:attributes='href item_url; class string:$item_wf_state_class url'
                      tal:content='item_title_or_id'>
                      An ethyl methane sulfonate protocol
                    </a>
                  </td>
                  <td tal:content='protocol_description' style='padding-right: 1em;'>
                    Ethyl methane sulfonate is an alkylating agent and a potent mutagen; it created a virus so lethal the subject was dead before he left the table.
                  </td>
                  <td>
                    <tal condition='piName'>
                      <tal condition='piURL'>
                        <a href='#' tal:attributes='href piURL' tal:content='piName'>Eldon Tyrell</a>
                      </tal>
                      <span tal:condition='not:piURL' tal:omit-tag='' tal:content='piName'>Eldon Tyrell</span>
                    </tal>
                  </td>
                </tr>
              </metal:block>
            </tal:block>
          </tal:entry>
        </tbody>
      </table>

        <div metal:use-macro="context/batch_macros/macros/navigation" />
    </tal:listing>
    <metal:empty metal:define-slot="no_items_in_listing">
        <p class="discreet"
           tal:condition="not: folderContents"
           i18n:translate="description_no_items_in_folder">
            There are currently no items in this folder.
        </p>
    </metal:empty>

    </tal:foldercontents>
    </metal:listingmacro>

</metal:block>
</metal:content-core>

</body>
</html>
