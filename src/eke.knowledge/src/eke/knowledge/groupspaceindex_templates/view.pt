<html
    i18n:domain='eke.knowledge'
    lang='en'
    metal:use-macro='context/main_template/macros/master'
    xml:lang='en'
    xmlns:i18n='http://xml.zope.org/namespaces/i18n'
    xmlns:metal='http://xml.zope.org/namespaces/metal'
    xmlns:tal='http://xml.zope.org/namespaces/tal'
    xmlns='http://www.w3.org/1999/xhtml'>
    <head>
        <title>Group Space Index View</title>
    </head>
    <body>
        <metal:content-core fill-slot='content-core'>
            <metal:content-core define-macro='content-core' tal:define='
                isAnon context/@@plone_portal_state/anonymous;
            '>
            <pre tal:condition='isAnon'>You are anonymous. You are legion.</pre>
            <pre tal:condition='not:isAnon'>Hiya, friend.</pre>
            </metal:content-core>
        </metal:content-core>
        <metal:css fill-slot='style_slot'>
            <style type='text/css' rel='stylesheet' href='#'
                tal:define='navroot context/@@plone_portal_state/navigation_root_url'
                tal:attributes='href string:${navroot}/++resource++eke.knowledge/collaborations.css'
            />
        </metal:css>
    </body>
</html>
